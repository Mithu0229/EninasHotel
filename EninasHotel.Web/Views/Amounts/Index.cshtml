@model IEnumerable<Amount>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Transaction List</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Amounts" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Add New Transaction
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Transaction Type</th>
                    <th>Cash In</th>
                    <th>Cash Out</th>
                    <th>Charge</th>
                    <th>Commission</th>
                    <th>Transaction Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(item.TransactionType == 1 ? "Cash In" :
                                                    item.TransactionType == 2 ? "Cash Out" : "N/A")
                    </td>
                    <td>@item.CashIn</td>
                    <td>@item.CashOut</td>
                    <td>@item.Charge</td>
                    <td>@item.Commission</td>
                    <td>@item.TransactionDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Amounts" asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Amounts" asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
